@model MVCImage.Models.Category

@{
    ViewData["Title"] = "Chỉnh Sửa Danh Mục";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h3 class="card-title"><i class="bi bi-pencil-square"></i> @ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label font-weight-bold"></label>
                            <input asp-for="Name" class="form-control" placeholder="Nhập tên danh mục..." />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label font-weight-bold"></label>
                            <input asp-for="Description" class="form-control" placeholder="Nhập mô tả danh mục..." />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="CategoryId" />
                        <div class="form-group text-center mt-4">
                            <input type="submit" value="Lưu" class="btn btn-success" />
                            <a asp-action="Index" class="btn btn-secondary ml-2"><i class="bi bi-arrow-left"></i> Quay lại</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
        