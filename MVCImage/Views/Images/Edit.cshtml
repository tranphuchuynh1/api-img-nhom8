@model MVCImage.Models.Image

@{
    ViewData["Title"] = "Chỉnh Sửa Ảnh";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h3 class="card-title"><i class="bi bi-pencil-square"></i> @ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="ImageId" />
                        <div class="form-group">
                            <label asp-for="Title" class="control-label font-weight-bold"></label>
                            <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề..." />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label font-weight-bold"></label>
                            <input asp-for="Description" class="form-control" placeholder="Nhập mô tả..." />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ImageUrl" class="control-label font-weight-bold"></label>
                            <input asp-for="ImageUrl" class="form-control" placeholder="Nhập URL hình ảnh..." />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CategoryId" class="control-label font-weight-bold"></label>
                            <input asp-for="CategoryId" class="form-control" placeholder="Nhập ID danh mục..." />
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center mt-4">
                            <input type="submit" value="Lưu" class="btn btn-success " />
                            <a asp-action="Index" class="btn btn-secondary  ml-2"><i class="bi bi-arrow-left"></i> Quay lại</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
