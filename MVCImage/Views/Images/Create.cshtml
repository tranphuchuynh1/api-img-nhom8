@model MVCImage.Models.ImageUploadDto

@{
    ViewData["Title"] = "Tạo Hình Ảnh";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3 class="card-title"><i class="bi bi-folder-plus"></i> @ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div class="form-group">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề..."/>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" placeholder="Nhập mô tả..." />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ImageUrl" class="control-label"></label>
                            <input asp-for="ImageUrl" class="form-control" placeholder="Đường dẫn ảnh..." />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CategoryId" class="control-label"></label>
                            <input asp-for="CategoryId" class="form-control" placeholder="ID danh mục..." />
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                        <div style="margin-top:10px;" class="form-group text-center">
                            <input type="submit" value="Tạo" class="btn btn-success" />
                            <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Quay lại</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
